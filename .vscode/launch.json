    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "signinapp/webapp.py",
                "FLASK_DEBUG": "1",
                "CSSIGNIN_CONFIG": "${fileWorkspaceFolder}/appdata/cssignin.yaml"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "Production",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "signinapp/webapp.py",
                "CSSIGNIN_CONFIG": "${fileWorkspaceFolder}/appdata/cssignin.yaml"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "Init DB",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "signinapp/webapp.py",
                "CSSIGNIN_CONFIG": "${fileWorkspaceFolder}/appdata/cssignin.yaml"
            },
            "args": [
                "init-db"
            ],
            "jinja": true
        }
    ]
}