{% extends "base.html.jinja2" %}

{% block title %}Badge Admin - Chop Shop Sign In{%endblock%}

{% block content %}
<div class="pt-3 container table-responsive">
  {{- render_messages() -}}
  <table id="badges" class="table table-striped table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Badge</th>
        <th scope="col">ID</th>
        <th scope="col">Description</th>
        <th scope="col">Tools</th>
      </tr>
    </thead>
    <tbody>
      {%- for badge in badges -%}
      <tr>
        <th><a class="link-light" href="{{url_for('user.badge', badge_id=badge.id)}}">{{show_badge(badge)}}</a></th>
        <td>{{badge.id}}</td>
        <td>{{badge.description}}</td>
        <td>
          <a class="link-light" href="{{url_for('admin.edit_badge', badge_id=badge.id)}}">Edit</a>
          <a class="link-light" href="{{url_for('admin.award_badge', badge_id=badge.id)}}">Award</a>
        </td>
      </tr>
      {%- endfor -%}
    </tbody>
  </table>
  <a href="{{url_for('admin.new_badge')}}"><button class="btn btn-primary">New Badge</button></a>
</div>
{% endblock %}