{% extends "base.html.jinja2" %}
{% from 'bootstrap5/utils.html' import render_static %}

{% block title %}Chop Shop Sign In Event Admin{%endblock%}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
      <a href="{{url_for('admin.new_event')}}">New Event</a>
      <a href="{{url_for('admin.bulk_events')}}">Bulk Add Events</a>
      <table id="events" class="table table-sm table-striped table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <th scope="col">Event</th>
            <th scope="col">ID</th>
            <th scope="col">Description</th>
            <th scope="col">Code</th>
            <th scope="col">Location</th>
            <th scope="col">Start</th>
            <th scope="col">End</th>
            <th scope="col">Type</th>
          </tr>
        </thead>
        <tbody id="userbody">
          {%- for event in events|reverse -%}
          <tr>
            <th><a href="{{url_for('admin.edit_event', event_id=event.id)}}">{{event.name}}</a></th>
            <td>{{event.id}}</td>
            <td>{{event.description}}</td>
            <td>{{event.code}}</td>
            <td>{{event.location}}</td>
            <td>{{event.start_local}}</td>
            <td>{{event.end_local}}</td>
            <td>{{event.type_.name}}</td>
          </tr>
          {%- endfor -%}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}