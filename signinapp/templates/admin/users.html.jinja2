{% extends "base.html.jinja2" %}

{% block title %}Chop Shop Sign In User Admin{%endblock%}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
      <table id="users" class="table table-sm table-striped table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <th scope="col">User</th>
            <th scope="col">Subteam</th>
            <th scope="col">Total Time</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody id="userbody">
          {%- for user in users -%}
          <tr>
            <th><a href="{{url_for('user.profile', user_id=user.id)}}">{{user.name}}</a></th>
            <td>{{user.subteam.name}}</td>
            <td>{{ user.total_time }}</td>
            <td><a href="{{url_for('admin.edit_user', user_id=user.id)}}">Edit</a></td>
          </tr>
          {%- endfor -%}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}