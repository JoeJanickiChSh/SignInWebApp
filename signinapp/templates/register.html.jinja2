{% extends "base.html.jinja2" %}
{% from 'bootstrap5/form.html' import render_form %}

{% block title %}Register for Chop Shop Sign In{% endblock %}

{% block content %}
<div class="container">
  <h1>Register</h1>
  {%- with messages = get_flashed_messages() %}
  {%- if messages %}
      <div class="notification is-danger">
          {{ messages[0] }}
      </div>
  {%- endif %}
  {%- endwith %}
  {%- if form.name.errors %}
    <ul class="errors">
    {%- for error in form.name.errors %}
        <li>{{ error }}</li>
    {%- endfor %}
    </ul>
  {%- endif %}
  {{ render_form(form) }}
</div>
{% endblock %}