{% extends "base.html.jinja2" %}
{% from 'bootstrap5/utils.html' import render_static %}

{% block scripts %}
{{ super() }}
{{ render_static('js', "https://unpkg.com/html5-qrcode", false)}}
{{ render_static('js', 'qr.js') }}
{% endblock %}

{% block content %}
<script type="text/javascript">const event_code = {{ event_code }}</script>
<div class="container">
  <div class="row">
    <div class="col">
      <div id="reader" style="width: 100%; margin: auto"></div>
      <div id="liveAlertPlaceholder"></div>
    </div>
    <div class="col">
      <table id="users" class="table table-sm table-striped table-hover table-bordered table-responsive">
        <thead>
          <tr>
            <th scope="col">User</th>
            <th scope="col">Time</th>
          </tr>
        </thead>
        <tbody id="userbody"></tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}